; -*- mode: conf-windows-mode; eval: (rainbow-mode 1); -*-
;=====================================================
;
;   To learn more about how to configure Polybar
;   go to https://github.com/jaagr/polybar
;
;   The README contains a lot of information
;
;=====================================================


[colours]
background = #222
background-alt = #444
foreground = #dfdfdf
foreground-alt = #55

primary = ${self.gold-bright}
secondary = ${self.red-bright}
alert = ${self.red}

red = #bd2c40
red-bright = #e60053
red-tangerine = #ed5456
blue = #0088cc
green = #2f8419
green-bright = #55aa55
gold = #f5a70a
gold-bright = #ffb52a
turquoise = #2aa198

[global/wm]
margin-top = 0
margin-bottom = 0

[settings]
screenchange-reload = true

[bar/top]
;monitor = primary
width = 100%
height = 25
offset-x = 0
offset-y = 0
bottom = false  ;; put at top

;background = #00FFFFFF
;background = #00000000
;background = #002F343F
background = ${colours.background}
foreground = ${colours.foreground}

overline-size = 0
overline-color = #f00
underline-size = 0
underline-color = #00f

border-bottom-size = 1
border-bottom-color = ${colours.blue}

padding-left = 0
padding-right = 2
module-margin-left = 1
module-margin-right = 0

; font-N = <fontconfig pattern>;<vertical offset>
; this list of fonts is referenced with 1-based index
; i.e. Font Awesome = font number 4
font-0 = hack:pixelsize=14:weight=bold;1
font-1 = unifont:size=14:heavy:fontformat=truetype;-2
font-2 = siji:pixelsize=10;0
font-3 = Font Awesome 5 Free:size=14:antialias=true:style=Solid;2
font-4 = Font Awesome 5 Free:size=14:antialias=true:style=Regular;2

modules-left = i3
modules-right = eth filesystem memory cpu volume battery temperature date

tray-position = right
tray-padding = 1
tray-detached = false

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev


;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; MODULES
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/xwindow]
type = internal/xwindow
;label = %title:0:40:...%
;label = %{o#503896 u#503896 +o +u B#301674}  %title:0:40:...%  %{B- -o -u}
label = %title:0:70:...%  %{B- -o -u}

[module/xtitle]
type = custom/script
exec = xwindowname tail
tail = true
format = %{T3} <output> %{T-}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>

index-sort = true
enable-click = true
enable-scroll = false
wrapping-scroll = false

strip-wsnumbers = false
pin-workspaces = true

label-mode = %mode%
label-mode-padding = 1
label-mode-foreground = ${colours.blue}

;label-unfocused-foreground = #555555
label-unfocused-padding = 1

; Available tokens:
;   %name%
;   %icon%
;   %index%
;   %output%
; Default: %icon%  %name%
label-visible = %index%
label-visible-underline = #555555
label-visible-padding = 4
label-visible-foregroud = #888888

label-focused-foreground = ${colours.blue}
label-focused-padding = 1

label-urgent-padding = 1

label-dimmed-underline = ${BAR.background}
label-focused-underline = ${colours.blue}

[module/keyboard]
type = internal/xkeyboard
blacklist-0 = num lock
label-layout = %{T4}%{T-} %layout%
label-layout-underline = ${colours.secondary}
label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colours.secondary}
label-indicator-underline = ${colours.secondary}

[module/filesystem]
type = internal/fs
interval = 0.5
mount-0 = /
mount-1 = /home
label-mounted =  %mountpoint%: %percentage_used%%
label-unmounted =  %mountpoint%: not mounted
label-unmounted-foreground = ${colours.foreground-alt}

[module/cpu]
type = internal/cpu
interval = 0.5

format = <label> <ramp-coreload>

label = 
label-font = 4

ramp-coreload-0 = ▁
ramp-coreload-0-font = 4
ramp-coreload-0-foreground = ${colours.blue}
ramp-coreload-1 = ▂
ramp-coreload-1-font = 4
ramp-coreload-1-foreground = ${colours.green}
ramp-coreload-2 = ▃
ramp-coreload-2-font = 4
ramp-coreload-2-foreground = ${colours.gold}
ramp-coreload-3 = ▄
ramp-coreload-3-font = 4
ramp-coreload-3-foreground = ${colours.red-tangerine}

[module/memory]
type = internal/memory
format = <label> <bar-used>
label = %{T4} %{T-}%gb_used%

; (%percentage_used%%)
;label-font = 4
;label-foreground = ${colours.blue}

bar-used-width = 10
bar-used-gradient = true
bar-used-foreground-0 = ${colours.blue}
bar-used-foreground-1 = ${colours.green}
bar-used-foreground-2 = {colours.gold}
bar-used-foreground-3 = ${colours.red-tangerine}
bar-used-indicator = █
bar-used-indicator-font = 3
bar-used-indicator-foreground = #fff
bar-used-fill = █
bar-used-fill-font = 3
bar-used-empty = █
bar-used-empty-font = 3
bar-used-empty-foreground = #44

[module/eth]
type = internal/network
interface = wlp2s0
interval = 0.5

format-connected = <ramp-signal> <label-connected>
label-connected = %essid% %{T4}%{T-} %upspeed% %{T4}%{T-} %downspeed%

format-disconnected = <label-disconnected>
label-disconnected = %{T4}

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-font = 4

[module/date]
type = internal/date
interval = 15

label = %date% %time%
date =  %a %d/%m/%y
time =  %I:%M %p

[module/battery]
type = internal/battery

; This is useful in case the battery never reports 100% charge
;full-at = 99

; Use the following command to list batteries and adapters:
; $ ls -1 /sys/class/power_supply/
battery = BAT0
adapter = AC

; If an inotify event haven't been reported in this many
; seconds, manually poll for new values.
;
; Needed as a fallback for systems that don't report events
; on sysfs/procfs.
;
; Disable polling by setting the interval to 0.
;
; Default: 5
poll-interval = 5

time-format = %H:%M

format-charging = <animation-charging> <label-charging>
format-charging-underline = ${colours.gold-bright}

format-discharging = <ramp-capacity> <label-discharging>
format-discharging-underline = ${self.format-charging-underline}

format-full-prefix = " "
format-full-underline = ${self.format-charging-underline}

ramp-capacity-0 = %{T4}
ramp-capacity-1 = %{T4}
ramp-capacity-2 = %{T4}
ramp-capacity-3 = %{T4}
ramp-capacity-4 = %{T4}

animation-charging-0 = %{T4}
animation-charging-1 = %{T4}
animation-charging-2 = %{T4}
animation-charging-3 = %{T4}
animation-charging-4 = %{T4}
animation-charging-framerate = 750

[module/volume]
type = internal/alsa

master-soundcard = hw:0
speaker-soundcard = hw:0
;headphone-soundcard = hw:0

master-mixer = Master
speaker-mixer = Speaker
;headphone-mixer = Headphone
;headphone-id=14

format-volume = <ramp-volume> <bar-volume>
mapped = true

;; this is fucked...
;; click -> mute
;; click again -> DOES NOT UNMUTE!!
label-muted = %{T4}%{T-} mute
format-muted-suffix = "     "

click-left = amixer -q sset Master toggle

ramp-volume-0 = %{T4}
ramp-volume-1 = %{T4}
ramp-volume-2 = %{T4}
ramp-headphones-0 = %{T4}

bar-volume-width = 10
bar-volume-foreground-0 = ${colours.green-bright}
bar-volume-foreground-1 = ${colours.green-bright}
bar-volume-foreground-2 = ${colours.green-bright}
bar-volume-foreground-3 = ${colours.green-bright}
bar-volume-foreground-4 = ${colours.green-bright}
bar-volume-foreground-5 = ${colours.gold}
bar-volume-foreground-6 = ${colours.red-tangerine}
bar-volume-gradient = true
bar-volume-indicator = │
bar-volume-indicator-font = 3
bar-volume-indicator-foreground = ${colours.blue}
bar-volume-fill = ─
bar-volume-fill-font = 3
bar-volume-empty = ─
bar-volume-empty-font = 3
bar-volume-empty-foreground = ${colours.foreground-alt}

[module/temperature]
type = internal/temperature
; Thermal zone to use
; To list all the zone types, run
; $ for i in /sys/class/thermal/thermal_zone*; do echo "$i: $(<$i/type)"; done
; Default: 0
thermal-zone = 0
warn-temperature = 75

format = <ramp> <label>
format-underline = ${colours.blue}
format-warn = <ramp> <label-warn>
format-warn-underline = ${self.format-underline}

label = %temperature-c%
label-warn = ! %temperature-c%
label-warn-foreground = ${colours.secondary}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 
ramp-4 = 
